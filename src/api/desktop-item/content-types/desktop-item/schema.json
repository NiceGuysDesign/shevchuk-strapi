{
  "kind": "collectionType",
  "collectionName": "desktop_items",
  "info": {
    "singularName": "desktop-item",
    "pluralName": "desktop-items",
    "displayName": "Desktop Item"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "type": {
      "type": "enumeration",
      "required": true,
      "default": "folder",
      "enum": [
        "folder",
        "image",
        "presentation",
        "AppLink"
      ]
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::desktop-item.desktop-item",
      "inversedBy": "children"
    },
    "children": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::desktop-item.desktop-item",
      "mappedBy": "parent"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "presentationImg": {
      "type": "media",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "presentation"
          ]
        }
      },
      "multiple": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "position": {
      "type": "enumeration",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": true,
      "default": "top-left",
      "enum": [
        "top-left",
        "top-right",
        "bottom-left",
        "bottom-right"
      ]
    },
    "link": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "AppLink"
          ]
        }
      }
    }
  }
}
